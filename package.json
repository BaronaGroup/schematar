{
    "name": "schematar",
    "version": "1.4.0",
    "description": "Creates mongoose schemas, typescript interfaces and json schemas from a single schema",
    "homepage": "https://github.com/BaronaGroup/schematar",
    "repository": {
        "type": "git",
        "url": "BaronaGroup/schematar"
    },
    "license": "MIT",
    "author": {
        "name": "Tapani Haka"
    },
    "devDependencies": {
        "@types/gulp": "4.0.6",
        "@types/gulp-typescript": "2.13.0",
        "@types/jest": "24.0.13",
        "@types/mkdirp": "0.5.2",
        "@types/mongodb": "3.1.28",
        "@types/mongoose": "5.5.3",
        "@types/node": "10.14.8",
        "gulp": "4.0.2",
        "gulp-clean": "0.4.0",
        "gulp-typescript": "5.0.1",
        "jest": "24.8.0",
        "mongoose": "5.5.12",
        "nodemon": "1.19.1",
        "npm-release": "1.0.0",
        "ts-jest": "24.0.2",
        "ts-node-dev": "1.0.0-pre.39",
        "tslint": "5.17.0",
        "typescript": "3.5.1"
    },
    "dependencies": {
        "glob": "^7.1.3",
        "karhu": "^1.4.0",
        "mkdirp": "0.5.1",
        "mongodb": "^3.2.2"
    },
    "peerDependencies": {
        "mongoose": "^5.0.0"
    },
    "scripts": {
        "build": "gulp",
        "tslint": "tslint --project tsconfig.json",
        "lint": "npm run tslint",
        "test": "jest",
        "prepare": "npm run build",
        "release": "npm test && npm-release"
    },
    "main": "dist/api.js",
    "bin": "dist/app.js",
    "jest": {
        "collectCoverageFrom": [
            "/src/**/*.ts"
        ],
        "testMatch": [
            "**/*-test.ts"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "setupFiles": [
            "<rootDir>/src/test/test-setup.ts"
        ],
        "testEnvironment": "node",
        "globals": {
            "ts-jest": {
                "tsConfig": {
                    "incremental": true
                }
            }
        }
    }
}
